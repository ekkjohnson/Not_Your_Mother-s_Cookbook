<div class="recipe-title">
<h3>Recipes</h3>
<button class="btn btn-outline-primary" id="add-recipe-btn" type="recipe">Add Recipe</button>
</div>
{{!-- Open Recipe Main Content --}}
<div class="recipe-main-content">
  {{!-- Recipe Side --}}
  <section class="recipe-card-holder">
{{#each recipes as |recipe|}}
  <div class="card recipe-card">
  <div class="card-header">
    {{name}}<button class="favorite-button" data-userid='{{user.id}}' data-recipeid='{{id}}'>Add Favorite</button>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Ingredients: {{ingredients}}</p>
      <p>Directions: {{directions}}</p>
      <footer class="blockquote-footer">Submitted by: {{user.username}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
</section>
{{!-- Favorites Side --}}
  <section class="favorite-card-holder">
  {{#each favs as |favorite|}}
    <div class="card recipe-card">
    <div class="card-header">
      {{name}}<button class="favorite-button" data-userid='{{user.id}}' data-recipeid='{{id}}'>Remove Favorite</button>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>Ingredients: {{ingredients}}</p>
        <p>Directions: {{directions}}</p>
        <footer class="blockquote-footer">Submitted by: {{user.username}}</footer>
      </blockquote>
    </div>
  </div>
  {{/each}}
  </section>
  {{!-- Closing Recipe Main Content --}}
</div> 

<script src="/js/recipe.js"></script>
