{{!-- Open Recipe Main Content --}}
<section class="recipePage">
<div class="recipe-main-content">
  {{!-- Favorites Side --}}
  <section class="favorite-side-bar">

  <button class="btn" id="add-recipe-btn" type="recipe">Add Recipe</button>
     {{#each favs as |favorite|}}
     <div class="favorite-menu-item">
      <a id="item-{{id}}" href="#item-card-{{id}}" class="link"><button class="btn favorite-link">
        {{name}}
      <button class="remove-button removeBtn btn" data-user='{{user}}' data-recipeid='{{id}}'>x</button>
      </button></a>

     </div>
  {{/each}}
  </section>
  {{!-- Recipe Side --}}


  <section class="recipe-card-holder">
{{#each recipes as |recipe|}}
  <div class="recipe-card" id="item-card-{{id}}">
  <div class="card-header">
    <h1>{{name}}</h1>
    <button class="favorite-button btn" data-recipeid='{{id}}'>Add Favorite</button>
    <button class="delete-button btn" data-recipeid='{{id}}'>Delete Recipe</button>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><h5>Ingredients: </h5>{{ingredients}}</p>
      <p><h5>Directions: </h5>{{directions}}</p>
      <footer class="blockquote-footer">Submitted by: {{user.username}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
</section>

  {{!-- Closing Recipe Main Content --}}
</div> 
<script src="/js/recipe.js"></script>
</section>
