{{!-- Open Recipe Main Content --}}

<div class="recipe-main-content">
  {{!-- Favorites Side --}}
  <section class="favorite-side-bar">

  <button class="btn btn-success" id="add-recipe-btn" type="recipe">Add Recipe</button>
     {{#each favs as |favorite|}}
     <div class="favorite-menu-item">
      <a id="item-{{id}}" href="#item-card-{{id}}" class="link"><button class="btn favorite-link">
        {{name}}
      <button class="removeBtn" data-user='{{user}}' data-recipeid='{{id}}'>❌</button>
      </button></a>

     </div>
  {{/each}}
  </section>
  {{!-- Recipe Side --}}


  <section class="recipe-card-holder">
{{#each recipes as |recipe|}}
  <div class="recipe-card" id="item-card-{{id}}">
  <div class="card-header">
    <h1 class="name">{{name}}</h1><button class="btn" data-recipeid='{{id}}'>⭐</button>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Ingredients: {{ingredients}}</p>
      <p>Directions: {{directions}}</p>
      <footer class="blockquote-footer">Submitted by: {{user.username}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
</section>

  {{!-- Closing Recipe Main Content --}}
</div> 

<script src="/js/recipe.js"></script>
