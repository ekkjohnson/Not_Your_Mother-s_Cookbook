<div class="card">
<h3>Recipes</h3>
</div>
<button class="btn btn-outline-primary" id="add-recipe-btn" type="recipe">Add Recipe</button>
<div class="container">{{recipeData}}</div>
<section class="flex-row justify-center card-holder">
{{#each recipes as |recipe|}}
  <div class="card recipe-card">
  <div class="card-header">
    {{name}}{{id}} <button class="favorite-button" data-userid='{{user.id}}' data-recipeid='{{id}}'>favorite</button>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Ingredients: {{ingredients}}</p>
      <p>Directions: {{directions}}</p>
      <footer class="blockquote-footer">Submitted by: {{user.username}}{{user.id}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
</section>
<section class="flex-row justify-center card-holder">
{{#each favs as |favorite|}}
  <div class="card recipe-card">
  <div class="card-header">
    {{name}}{{id}} <button class="favorite-button" data-userid='{{user.id}}' data-recipeid='{{id}}'>favorite</button>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Ingredients: {{ingredients}}</p>
      <p>Directions: {{directions}}</p>
      <footer class="blockquote-footer">Submitted by: {{user.username}}{{user.id}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
</section>
</div>
 
</div>

<script src="/js/recipe.js"></script>
