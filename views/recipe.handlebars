{{!-- Open Recipe Main Content --}}
<div class="recipe-page-header">
  <div class="recipe-title">
    <h1>All Recipes</h1>
  </div>
  <div class="favorite-title">
    <h1>Favorite Recipes</h1>
  </div>
</div>
<div class="recipe-main-content">
  {{!-- Recipe Side --}}
  <div class="button-bar">
      <button class="btn btn-success" id="add-recipe-btn" type="recipe">Add Recipe</button>
  </div>
  <section class="recipe-card-holder">
{{#each recipes as |recipe|}}
  <div class="recipe-card">
  <div class="card-header">
    <h1>{{name}}</h1><button class="favorite-button btn btn-success" data-userid='{{user.id}}' data-recipeid='{{id}}'>Add Favorite</button>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Ingredients: {{ingredients}}</p>
      <p>Directions: {{directions}}</p>
      <footer class="blockquote-footer">Submitted by: {{user.username}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
</section>
{{!-- Favorites Side --}}
  <section class="favorite-card-holder">
  {{#each favs as |favorite|}}
    <div class="recipe-card">
    <div class="card-header">
      <h1>{{name}}</h1><button class="remove-button btn btn-danger" data-userid='{{user.id}}' data-recipeid='{{id}}'>Remove Favorite</button>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>Ingredients: {{ingredients}}</p>
        <p>Directions: {{directions}}</p>
        <footer class="blockquote-footer">Submitted by: {{user.username}}</footer>
      </blockquote>
    </div>
  </div>
  {{/each}}
  </section>
  {{!-- Closing Recipe Main Content --}}
</div> 

<script src="/js/recipe.js"></script>
